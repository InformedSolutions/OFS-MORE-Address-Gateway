{
  "swagger": "2.0",
  "info": {
    "description": "A RESTful web service for querying addresses.",
    "version": "v1",
    "title": "Addressing Service"
  },
  "basePath": "/addressing-service/api/v1",
  "tags": [
    {
      "name": "addresses",
      "description": "Operations available for querying addresses."
    },
    {
      "name": "configuration",
      "description": "Operations available for configuring settings used by this API."
    }
  ],
  "paths": {
    "/addresses/{postcode}": {
      "get": {
        "tags": [
          "addresses"
        ],
        "summary": "Returns addresses associated with a UK postcode",
        "operationId": "postcode-search",
        "consumes": [
          "application/json"
        ],
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "in": "path",
            "name": "postcode",
            "description": "A postcode search request",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "Matched addresses",
            "schema": {
              "$ref": "#/definitions/PostcodeResponse"
            }
          },
          "400": {
            "description": "Error Bad Request",
            "schema": {
              "$ref": "#/definitions/ErrorResponse"
            }
          },
          "500": {
            "description": "Internal Server Error",
            "schema": {
              "$ref": "#/definitions/ErrorResponse"
            }
          }
        }
      }
    },
    "/addresses/api-key/": {
      "put": {
        "tags": [
          "configuration"
        ],
        "summary": "Sets the (address lookup provider issued) API key used by this service",
        "operationId": "apiKey",
        "consumes": [
          "application/json"
        ],
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "in": "body",
            "name": "UpdateApiKeyRequest",
            "description": "Payment provider API key",
            "required": true,
            "schema": {
              "$ref": "#/definitions/UpdateApiKeyRequest"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "API Key updated",
            "schema": {
              "$ref": "#/definitions/UpdateApiKeyResponse"
            }
          },
          "400": {
            "description": "Bad request"
          },
          "500": {
            "description": "Server error"
          }
        }
      }
    }
  },
  "definitions": {
    "PostcodeResponse": {
      "type": "object",
      "properties": {
        "count": {
          "type": "string",
          "example": 2
        },
        "results": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/Address"
          }
        }
      }
    },
    "Address": {
      "type": "object",
      "properties": {
        "combinedAddress": {
          "type": "string",
          "example": "The Old Bank, Old Market Pl, Altrincham, Cheshire"
        },
        "line1": {
          "type": "string",
          "example": "The Old Bank"
        },
        "line2": {
          "type": "string",
          "example": "Old Market Pl"
        },
        "townOrCity": {
          "type": "string",
          "example": "Altrincham"
        },
        "country": {
          "type": "string",
          "example": "United Kingdom"
        },
        "postcode": {
          "type": "string",
          "example": "WA14 4PA"
        }
      }
    },
    "UpdateApiKeyRequest": {
      "type": "object",
      "required": [
        "apiKey"
      ],
      "properties": {
        "apiKey": {
          "type": "string",
          "example": "AE1CHHVYKbmszo34yFe1KF1GlOlCogGB"
        }
      }
    },
    "UpdateApiKeyResponse": {
      "type": "object",
      "required": [
        "message"
      ],
      "properties": {
        "message": {
          "type": "string"
        }
      }
    },
    "ErrorResponse": {
      "type": "object",
      "required": [
        "error",
        "message"
      ],
      "properties": {
        "message": {
          "type": "string"
        },
        "error": {
          "type": "string"
        }
      }
    }
  }
}